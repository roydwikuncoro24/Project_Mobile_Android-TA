                        android:text="Harga Dasar"
                        android:textSize="18sp"
                        android:textColor="#000"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Harga Jual"
                        android:textSize="18sp"
                        android:textColor="#000"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Keterangan"
                        android:textSize="18sp"
                        android:textColor="#000"/>
